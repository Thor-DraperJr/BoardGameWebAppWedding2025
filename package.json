{
  "name": "wedding-board-games",
  "private": true,
  "version": "1.0.0",
  "description": "A beautiful board game management web app for wedding receptions",
  "type": "module",
  "keywords": ["wedding", "board-games", "react", "typescript", "azure", "static-web-app"],
  "author": "Thor Draper Jr.",
  "license": "MIT",
  "homepage": "https://wonderful-tree-023673a0f.6.azurestaticapps.net/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Thor-DraperJr/BoardGameWebAppWedding2025.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "api:dev": "cd api && npm run start",
    "api:build": "cd api && npm run build",
    "api:install": "cd api && npm install",
    "full-dev": "concurrently \"npm run dev\" \"npm run api:dev\"",
    "build:all": "npm run build && npm run api:build",
    "clean": "rimraf dist && cd api && npm run clean"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "rimraf": "^5.0.5",
    "terser": "^5.16.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
